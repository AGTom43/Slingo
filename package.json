{
  "name": "slingo",
  "version": "1.0.0",
  "description": "Slingo aims at dimishing the communication barrier for deaf people. It uses deep learning with image recognition to translate sign language from visual user input, providing a course and translation service.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niccolosottile/slingo.git"
  },
  "author": "ESP group 19 at University of Bath",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/niccolosottile/slingo/issues"
  },
  "homepage": "https://github.com/niccolosottile/slingo#readme",
  "scripts": {
    "client": "npm run start --prefix client",
    "server": "npm run start --prefix server",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "joi": "^17.8.3",
    "joi-password-complexity": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.1.0",
    "mongoose": "^7.0.0",
    "nodemailer": "^6.9.1",
    "react-step-progress-bar": "^1.0.3"
  }
}
